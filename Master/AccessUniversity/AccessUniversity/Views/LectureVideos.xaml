<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessUniversity.Views.LectureVideos">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Open from URL" 
                    Clicked="URLopen"/>
            <Button Text="Open from local file" 
                    Command="{Binding URLopen}"/>
            <MediaElement x:Name="selectedVideo"
                          Source="ms-appx:///xd.mp4"
                          ShowsPlaybackControls="True"
                          AutoPlay="True"
                          KeepScreenOn="True"
                          VerticalOptions="FillAndExpand">
            </MediaElement>
            <Label x:Name="test" Text="Fail"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessUniversity.Views.LoginPage"
             BackgroundColor="#005595">
    
    <StackLayout>
        <!-- Place new controls here -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <!--<Image Grid.Row="1" 
                   Source="LogoAnimated.gif"
                   IsAnimationPlaying="True"/>-->
            <Image Grid.Row="1"
                   Source="Logo.png"/>
            <Entry Grid.Row="2"
                Text="Student ID / Email"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="White"
                TextColor="Black"
                HeightRequest="40"
                WidthRequest="170"/>
            <Entry Grid.Row="3"
                IsPassword="true"
                Text="Password"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="White" 
                HeightRequest="40"
                WidthRequest="170"/>
        </Grid>

    </StackLayout>
</ContentPage>
    
    